<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TextView pour le message -->
    <TextView
        android:id="@+id/splashMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lottieAnimation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/splashfont"
        android:gravity="center"
        android:text="Ready to identify your plant  !"
        android:textAlignment="center"
        android:textColor="@color/splash"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <!-- Animation Lottie -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        app:lottie_rawRes="@raw/plant_growth"
        app:lottie_autoPlay="true"
        app:lottie_loop="false" />

</RelativeLayout>
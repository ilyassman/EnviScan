<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

        <style name="ReminderCardStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginVertical">8dp</item>
            <item name="cardCornerRadius">16dp</item>
            <item name="cardElevation">0dp</item>
            <item name="strokeWidth">0.4dp</item>
            <item name="strokeColor">#E0E0E0</item>
        </style>

        <style name="ReminderCardContent">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">horizontal</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:padding">16dp</item>
        </style>

        <style name="ReminderLabel">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">16sp</item>
            <item name="android:textColor">#004D40</item>
            <item name="android:layout_marginEnd">16dp</item>
            <item name="android:textStyle">bold</item>

        </style>

        <style name="ReminderValue">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>

        </style>

        <style name="ReminderSelector" parent="Widget.MaterialComponents.Button.TextButton">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">#00796B</item>
            <item name="android:textStyle">bold</item>
        </style>

    <style name="ReminderTimeDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00796B</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ReminderTimeButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00796B</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">28dp</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
    </style>

    </resources>
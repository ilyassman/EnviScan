<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:text="Botaniste IA"
        android:textSize="24sp"
        android:textColor="#2E7D32" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewFlorist"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/florist_icon" />

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Bonjour ! Vous pouvez envoyer votre message ou obtenir de l'aide grÃ¢ce aux suggestions. ðŸ˜Š"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:letterSpacing="0.05" />

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edittext"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:hint="Ã‰crivez votre message"
            android:inputType="text"
            android:gravity="center"
            android:maxLines="3"
            android:outlineProvider="background"
            android:padding="12dp"
            android:scrollHorizontally="false"
            android:shape="rectangle"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>
